{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "branchConcurrentLimit": 2,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["lint", "prettier"],
      "labels": ["linting"],
      "automerge": true
    },
    {
      "matchDepTypes": ["dev-dependencies"],
      "matchPackagePatterns": ["pysen", "black", "flake8", "isort", "mypy"],
      "labels": ["linting"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
